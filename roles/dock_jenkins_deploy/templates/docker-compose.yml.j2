version: '3.7'
services:
  jenkins:
#    image: jenkins/jenkins:lts
    build: .
    privileged: true
    user: root
    restart: always
    ports:
      - 127.0.0.1:8080:8080
      - 127.0.0.1:50000:50000
    container_name: jenkins
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - /tmp:/tmp
      - /home/{{ jenkins_user }}/jenkins:/var/jenkins_home
