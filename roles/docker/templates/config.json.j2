{
{% if proxy_env.http_proxy is defined or proxy_env.https_proxy is defined %}
 "proxies":
 {
   "default":
   {
   {% if proxy_env.http_proxy is defined %}
     "httpProxy": "http://127.0.0.1:3001",
   {% endif %}
   {% if proxy_env.https_proxy is defined %}
     "httpsProxy": "http://127.0.0.1:3001",
